# https://www.percona.com/blog/2020/06/30/mysql-101-parameters-to-tune-for-mysql-performance/

[mysqld]
{% if mysql_server_settings.port|int != 3306 %}
port = {{ mysql_server_settings.port }}
{% endif %}
bind-address = {{ mysql_server_settings.bind_address }}
datadir = {{ mysql_server_settings.datadir }}
socket = {{ mysql_server_settings.socket }}
pid-file = {{ mysql_server_settings.pid_file }}
{% if mysql_server_settings.skip_name_resolve | bool %}
skip-name-resolve
{% endif %}
{% if mysql_server_settings.sql_mode %}
sql_mode = {{ mysql_server_settings.sql_mode }}
{% endif %}

{% if mysql_server_settings.log_error|int >0 %}
# Logging configuration.
log-error = {{ mysql_server_settings.log_error }}
{% endif %}

{% if mysql_server_settings.slow_query_log_file| int > 0 %}
# Slow query log configuration.
slow_query_log = 1
slow_query_log_file = {{ mysql_server_settings.slow_query_log_file }}
long_query_time = {{ mysql_server_settings.slow_query_time }}
{% endif %}

{% if  mysql_version is version('5.7', '<=') %}
# Disabling symbolic-links is recommended to prevent assorted security risks
symbolic-links = 0
{% endif %}

# Memory settings.
key_buffer_size = {{ mysql_server_settings.key_buffer_size }}
max_allowed_packet = {{ mysql_server_settings.max_allowed_packet }}
table_open_cache = {{ mysql_server_settings.table_open_cache }}
sort_buffer_size = {{ mysql_server_settings.sort_buffer_size }}
read_buffer_size = {{ mysql_server_settings.read_buffer_size }}
read_rnd_buffer_size = {{ mysql_server_settings.read_rnd_buffer_size }}
myisam_sort_buffer_size = {{ mysql_server_settings.myisam_sort_buffer_size }}
thread_cache_size = {{ mysql_server_settings.thread_cache_size }}
{% if  mysql_version is version('5.7', '<=') %}
query_cache_type = {{ mysql_server_settings.query_cache_type }}
query_cache_size = {{ mysql_server_settings.query_cache_size }}
query_cache_limit = {{ mysql_server_settings.query_cache_limit }}
{% endif %}
max_connections = {{ mysql_server_settings.max_connections }}
tmp_table_size = {{ mysql_server_settings.tmp_table_size }}
max_heap_table_size = {{ mysql_server_settings.max_heap_table_size }}
group_concat_max_len = {{ mysql_server_settings.group_concat_max_len }}
join_buffer_size = {{ mysql_server_settings.join_buffer_size }}

# Other settings.
wait_timeout = {{ mysql_server_settings.wait_timeout }}
lower_case_table_names = {{ mysql_server_settings.lower_case_table_names }}
event_scheduler = {{ mysql_server_settings.event_scheduler_state }}
binlog_format = {{ mysql_server_settings.binlog_format }}

# InnoDB settings.
innodb_file_per_table = {{ mysql_server_settings.innodb_file_per_table }}
innodb_buffer_pool_size = {{ mysql_server_settings.innodb_buffer_pool_size }}
innodb_log_file_size = {{ mysql_server_settings.innodb_log_file_size }}
innodb_log_buffer_size = {{ mysql_server_settings.innodb_log_buffer_size }}
innodb_flush_log_at_trx_commit = {{ mysql_server_settings.innodb_flush_log_at_trx_commit }}
innodb_lock_wait_timeout = {{ mysql_server_settings.innodb_lock_wait_timeout }}
innodb_flush_method = {{ mysql_server_settings.innodb_flush_method }}
innodb_autoinc_lock_mode = {{ mysql_server_settings.innodb_autoinc_lock_mode }}
innodb_thread_concurrency = {{ mysql_server_settings.innodb_thread_concurrency }}
innodb_stats_on_metadata = {{ mysql_server_settings.innodb_stats_on_metadata }}
innodb_buffer_pool_instances = {{ mysql_server_settings.innodb_buffer_pool_instances }}

[mysqldump]
quick
max_allowed_packet = {{ mysql_server_settings.max_allowed_packet }}

[mysqld_safe]
pid-file = {{ mysql_server_settings.pid_file }}
